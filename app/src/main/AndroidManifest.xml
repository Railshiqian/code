<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shiqian.youknowme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApp.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".BannerActivity"
            android:launchMode="singleTask" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TestActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginOrRegisterActivity" />
        <activity
            android:name=".VersionUpdateActivity"
            android:launchMode="singleTask"
            android:theme="@style/MyDialog"/>

        <service android:name=".Services.VersionUpdateService"></service>

    </application>

</manifest>