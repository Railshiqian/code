<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/banner_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/banner_padding"
        android:paddingBottom="@dimen/banner_padding"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/banner_radiobtn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="btn1"
            android:textSize="@dimen/huge_text"
            android:textColor="@color/black"
            android:drawableTop="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/banner_img_txt_padding"/>

        <RadioButton
            android:id="@+id/banner_radiobtn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="btn2"
            android:textSize="@dimen/huge_text"
            android:textColor="@color/black"
            android:drawableTop="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/banner_img_txt_padding"/>

        <RadioButton
            android:id="@+id/banner_radiobtn_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="btn3"
            android:textSize="@dimen/huge_text"
            android:textColor="@color/black"
            android:drawableTop="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/banner_img_txt_padding"/>
    </RadioGroup>
</LinearLayout>
